{% extends 'base_login.twig' %}

{% block title %}Login{% endblock %} 
{% set body_class = "signin-page" %}

{% block javascript %}
    <script src="{{ asset('assets/js/functions.js') }}"></script>
    <script src="{{ asset('assets/js/custom.js') }}"></script>
    {% if data %}
    <script>
    $(document).ready(function () {
        {% if data.success_register == true %}
            Materialize.toast('Usuário criado com sucesso.', 1500, 'rounded');
        {% endif %}

        {% if data.login_error == true %}
            Materialize.toast('Usuário ou senha inválidos.', 1500, 'rounded');
        {% endif %}

        {% if data.logout == true %}
            Materialize.toast('Logout efetuado com sucesso.', 1500, 'rounded');
        {% endif %}
    });
    </script>
    {% endif %}
{% endblock %}

{% block stylesheet %} {% endblock %}

{% block content %}

<div class="mn-content valign-wrapper">
    <main class="mn-inner container">
        <div class="valign">
            <div class="row">
                <div class="col s12 m6 l4 offset-l4 offset-m3">
                    <div class="card white darken-1">
                        <div class="card-content ">
                            <span class="card-title">
                                Sign In
                            </span>
                            <div class="row">
                                <form id="login_form" method="POST" class="col s12">
                                    <div class="input-field col s12">
                                        <input id="email" name="email" type="email" class="validate">
                                            <label for="email">
                                                Email
                                            </label>
                                        </div>
                                        <div class="input-field col s12">
                                            <input id="password" name="password" type="password" class="validate">
                                                <label for="password">
                                                    Password
                                                </label>
                                            </div>
                                            <div class="col s12 right-align m-t-sm">
                                                <a href="{{ path('register') }}" class="waves-effect waves-grey btn-flat">
                                                    sign up
                                                </a>
                                                <a href="javascript:void(0);" id="btn-signin" class="waves-effect waves-light btn teal">
                                                    sign in
                                                </a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        
{% endblock %}
