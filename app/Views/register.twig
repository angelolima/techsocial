{% extends 'base_login.twig' %}

{% block title %}Novo Usuário{% endblock %}
{% set body_class = "signin-page" %}

{% block javascript %} 
    <script src="{{ asset('assets/js/functions.js') }}"></script>
    <script src="{{ asset('assets/js/custom.js') }}"></script>
    {% if error %}
    <script>
        $(document).ready(function () {
            Materialize.toast('{{ error }}', 1500, 'rounded');
        });
    </script>
    {% endif %}
{% endblock %}

{% block stylesheet %} {% endblock %}

{% block content %}
<div class="mn-content valign-wrapper">
    <main class="mn-inner container ">
        <div class="valign">
            <div class="row">
                <div class="col s12 m7 offset-l3 offset-m3">
                    <div class="card white darken-1">
                        <div class="card-content ">
                            <span class="card-title">Sign Up</span>
                            <div class="row">
                            <form id="signup_form" method="post" class="col s12">
                                <div class="input-field col s6">
                                    <input id="first_name" name="first_name" type="text" class="validate">
                                    <label for="first_name">Primeiro Nome</label>
                                </div>
                                <div class="input-field col s6">
                                    <input id="last_name" name="last_name" type="text" class="validate">
                                    <label for="last_name">Último Nome</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="email" name="email" type="email" class="validate">
                                    <label for="email">E-mail</label>
                                </div>
                                <div class="input-field col s4">
                                    <input id="document" name="document" onkeypress="mascara(this, maskcpf);" onchange="valida_cpf();" maxlength="14" type="text" class="validate">
                                    <label for="document">CPF</label>
                                </div>
                                <div class="input-field col s4">
                                    <input id="phone_number" name="phone_number" onkeypress="mascara(this, maskcelular);" maxlength="15" type="tel" class="validate">
                                    <label for="phone_number">Telefone</label>
                                </div>
                                <div class="input-field col s4">
                                    <input id="birth_date" name="birth_date" onkeypress="mascara(this, maskdata);" maxlength="10" type="text" class="validate">
                                    <label for="birth_date">Data Nascimento</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="password" name="pwd_hash" type="password" class="validate">
                                    <label for="password">Password</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="password2" type="password" class="validate">
                                    <label for="password2">Confirme o Password</label>
                                </div>
                                <div class="col s12 right-align m-t-sm">
                                    <a href="{{ path('login') }}" class="waves-effect waves-grey btn-flat">Sign in</a>
                                    <a href="javascript:void(0);" id="btn-signup" class="waves-effect waves-light btn teal">Sign Up</a>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
